echo "deb http://archive.getdeb.net/ubuntu zesty-getdeb apps" | sudo tee -a /etc/apt/sources.list
wget -q -O- http://archive.getdeb.net/getdeb-archive.key | sudo apt-key add -
sudo apt update
sudo apt install -y polybar

#copy polybar config files
mkdir -p ~/.config/polybar/
cp -r ~/Run/polybar/* ~/.config/polybar/

#creating mount points
sudo mkdir -p /media/$USER

#copy gtk settings file
sudo cp ~/Run/gtk3/settings.ini /etc/gtk-3.0/settings.ini

#install gtk-3.0 icon theme (Papirus)
sudo apt install -y software-properties-common
sudo add-apt-repository ppa:papirus/papirus
sudo apt-get update
sudo apt-get install -y papirus-icon-theme
#install gtk-3.0 theme (Arc-Dark)
sudo cp -r ~/Run/gtk3/Arc-Dark /usr/share/themes/Arc-Dark/
#install gtk-3.0 cursor theme (OpenZone_White)
sudo cp -r ~/Run/gtk3/OpenZone_White /usr/share/icons/
sudo cp ~/Run/gtk3/index.theme /usr/share/icons/default/index.theme

#install gtk-2.0 themes
cp ~/Run/gtk2/.gtkrc-2.0 ~/.gtkrc-2.0

#set gtk themes
gsettings set org.gnome.desktop.interface gtk-theme Arc-Dark
gsettings set org.gnome.desktop.wm.preferences theme Arc-Dark
gsettings set org.gnome.desktop.interface icon-theme Papirus

# install wicd icon theme
sudo cp -r ~/Run/gtk3/wicd-pale/ /usr/share/wicd/icons/

# install rxvt-unicode (deprecated)
#sudo apt install -y rxvt-unicode
#cp ~/Run/.Xresources ~/.Xresources

# install termite
