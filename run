tar xf check.tar.gz
cd check-0.12.0/
./configure
make
sudo make install
cd
# install
git clone --recursive --branch=1.5.1 https://www.github.com/DaveDavenport/rofi
cd rofi/
autoreconf -i
./configure
make
sudo make install
cd
rm check.tar.gz
rm -r rofi

# network manager openvpn
sudo apt install -y network-manager-openvpn
