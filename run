#./build.sh
#rm -rf ~/polybar/
git clone --recursive --branch=3.2.1 https://github.com/jaagr/polybar
cd polybar
mkdir build
cd build/
cmake ..
sudo make install

# GTK-3.0
# install gtk-3.0 icon theme (Papirus)
sudo apt install -y software-properties-common
