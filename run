#!/bin/bash

echo "Installing Tilede"

#go to home dir
cd

# update
sudo apt update --upgrade

# install make and build essential
sudo apt install -y build-essential make

# install xorg and i3
sudo apt install -y xorg i3 i3blocks

# install git
sudo apt install -y git

# install spotify
