[bar/top]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 25
;offset-x = 1%
;offset-y = 20%
;radius = 6.0
fixed-center = true
separator = "  "

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 1
line-color = #f00

border-size = 0
border-color = #000000

padding-left = 0
padding-right = 1

module-margin-left = 0
module-margin-right = 1

font-0 = SFNS Display Icon:pixelsize=9;1

modules-left = i3
modules-center = spotify
modules-right = wlan eth xkeyboard volume filesystem xbacklight redshift battery date

tray-position = right
tray-padding = 0
tray-transparent = false
tray-background = ${colors.background}

wm-restack = i3

;override-redirect = true

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

[bar/bottom]
width = 100%
height = 25
;only tray offset, use "bottom = true" to make bottom screen bar
;offset-x = 20%
;offset-y = 0%
;make this bar appear on the bottom of the screen
bottom = true
fixed-center = true
separator = "  "

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 1
line color = #f00

border-size = 0
border-color = #000000

padding-left = 0
padding-right = 1

module-margin-left = 0
module-margin-right = 1

font-0 = SFNS Display Icon:pixelsize=9;1

modules-left = usb
modules-center = title
modules-right = temperature cpu

tray-position = none
tray-padding = 0
tray-transparent = false
tray-background = ${colors.background}

wm-restack = i3

;override-redirect = true

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

[module/redshift]
type = custom/script
exec = ~/.config/polybar/scripts/redshift.sh
interval = 3

click-left = exec ~/.config/polybar/scripts/redshift_switch.sh

[module/title]
type = internal/xwindow

format-prefix = 
format-foreground = #60b48a

label-foreground = #60b48a
label = "%title:0:75:...%"
label-maxlen = 75

[module/test]
type=custom/script
format = <label>
format-foreground = #fff
format-prefix = "hohoho"

label = "hdfd"

click-left = exec xterm
click-right = exec xterm
scroll-up = exec xterm
scroll-down = exec xterm

[module/spotify]
type = custom/script
exec =  ~/.config/polybar/scripts/spotify_status.sh

format = <label>
format-prefix = ""
format-foreground = #23cf5f
tail = true
interval = 2

click-middle = exec ~/.config/polybar/scripts/spotify_pause.sh
click-left = exec ~/.config/polybar/scripts/spotify_previous.sh
click-right = exec ~/.config/polybar/scripts/spotify_next.sh

[module/xwindow]
type = internal/xwindow
